{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": false,
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "paths": {
      "@abstracts": ["./abstracts"],
      "@abstracts/*": ["./abstracts/*"],
      "@figures": ["./figures"],
      "@figures/*": ["./figures/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@utilities": ["./utilities"],
      "@utilities/*": ["./utilities/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
